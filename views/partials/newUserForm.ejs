<div class="titleContainer">
    <h1 class="titre">AJOUTER UN CONTACT</h1>
</div>
<form class="mainView form" method="POST">
    <label for="civility">
        <img class="smallIcon" src="./img/person-half-dress-solid.svg"/>
        <select class="field" id="civility" name="civility" value="<%= user.civility %>">
            <option value="Mr">Mr</option>
            <option value="Mme">Mme</option>
        </select>
    </label>

    <label for="lastname">
        <img class="smallIcon" src="./img/id-card-clip-solid.svg"/>
        <input class="field" type="text" id="lastname" name="lastname" placeholder="Votre nom" value="<%= user.lastname %>"/>
        <% if(error.lastname) { %>
            <p class="error"><%= error.msg.lastname %></p>
        <% } %>
    </label>

    <label for="firstname">
        <img class="smallIcon" src="./img/id-card-clip-solid-01.svg"/>
        <input class="field" type="text" id="firstname" name="firstname" placeholder="Votre prénom" value="<%= user.firstname %>"/>
        <% if(error.firstname) { %>
            <p class="error"><%= error.msg.firstname %></p>
        <% } %>
    </label>
    
    <label for="phone">
        <img class="smallIcon" src="./img/phone-solid.svg"/>
        <input class="field" type="tel" id="phone" name="phone" placeholder="Votre numéro de téléphone" value="<%= user.phone %>"/>
        <% if(error.phone) { %>
            <p class="error"><%= error.msg.phone %></p>
        <% } %>
    </label>

    <label for="mail">
        <img class="smallIcon" src="./img/envelope-solid.svg"/>
        <input class="field" type="mail" id="mail" name="mail" placeholder="Votre email" value="<%= user.mail %>"/>
        <% if(error.mail) { %>
            <p class="error"><%= error.msg.mail %></p>
        <% } %>
    </label>

    <label for="birthday">
        <img class="smallIcon" src="./img/calendar-days-solid.svg"/>
        <input class="field" type="date" id="birthday" name="birthday" placeholder="Votre date de naissance" value="<%= user.birthday %>"/>
        <% if(error.birthday) { %>
            <p class="error"><%= error.msg.birthday %></p>
        <% } %>
    </label>
    <div class="control">
        <button class="icon" id="check"></button>
        <a class="icon" id="cancel"  href="/"></a>
    </div>

</form>

